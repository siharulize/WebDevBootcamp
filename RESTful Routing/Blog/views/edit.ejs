<%- include("partials/header") %>

<div class="ui text container main segment">
    <div class="ui huge header">Edit: <%=blog.title%> </div>
    <form class="ui form" action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label for="">Title</label>
            <input type="text" name="blog[title]" id="" value="<%= blog.title%>">
        </div>
        <div class="field">
            <label for="">Image</label>
            <input type="text" name="blog[image]" id="" value="<%=blog.image%>">
        </div>
        <div class="field">
            <label for="">Blog Content</label>
            <textarea name="blog[body]" cols="30" rows="10" placeholder="blog post goes here..."><%=blog.body%></textarea>
        </div>
        <input class="ui secondary button" type="submit">
    </form>
</div>

<%- include("partials/footer") %> 