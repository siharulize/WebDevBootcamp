<%- include("partials/header") %>

<div class="ui text container main segment">
    <div class="ui huge header">New Blog</div>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label for="">Title</label>
            <input type="text" name="blog[title]" id="" placeholder="title">
        </div>
        <div class="field">
            <label for="">Image</label>
            <input type="text" name="blog[image]" id="" placeholder="image">
        </div>
        <div class="field">
            <label for="">Blog Content</label>
            <textarea name="blog[body]" cols="30" rows="10" placeholder="blog post goes here..."></textarea>
        </div>
        <input class="ui secondary button" type="submit">
    </form>
</div>

<%- include("partials/footer") %> 